   <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1600.0">
      <top>
         <HBox prefHeight="69.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
      </top>
      <center>
         <VBox maxWidth="-Infinity" minWidth="-Infinity" prefHeight="742.0" prefWidth="900.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
               <HBox prefHeight="57.0" prefWidth="900.0" spacing="20.0">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                  <children>
                     <ComboBox fx:id="coloreInput" editable="true" prefHeight="69.0" prefWidth="330.0" promptText="Colore" />
                  </children>
               </HBox>
               <TextField fx:id="colorPrice" promptText="Costo" />
               <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="450.0" prefWidth="100.0">
                  <children>
                     <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="450.0" prefWidth="830.0">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                        <children>
                           <ImageView fx:id="addedImagesView" fitHeight="400.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../../../../img/icons/addImage.png" />
                              </image>
                           </ImageView>
                           <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="745.0">
