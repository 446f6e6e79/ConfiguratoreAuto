                                 <ImageView fx:id="photoLeft" fitHeight="40.0" fitWidth="40.0" opacity="0.7" pickOnBounds="true" preserveRatio="true" rotate="180.0" BorderPane.alignment="CENTER">
                                    <image>
                                       <Image url="@../../../../img/icons/right-arrow.png" />
