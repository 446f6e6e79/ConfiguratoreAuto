<AnchorPane fx:id="catalogoComponent" prefHeight="500.0" prefWidth="970.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.configuratoreauto.Controllers.CatalogoController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" layoutX="0.0" layoutY="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="286.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <FlowPane fx:id="preventiviList" hgap="20.0" prefHeight="400.0" prefWidth="200.0" vgap="20.0" />
         </content>
         <padding>
            <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
         </padding>
      </ScrollPane>
      <VBox layoutX="1.0" layoutY="1.0" prefHeight="500.0" prefWidth="286.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Filtri:" />
            <HBox prefHeight="59.0" prefWidth="335.0">
               <children>
                  <Label text="Sede" />
                  <ChoiceBox fx:id="sediList" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="59.0" prefWidth="335.0">
               <children>
                  <Label text="Marca:" />
                  <ComboBox fx:id="brandList" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="59.0" prefWidth="335.0">
               <children>
                  <Label text="Cliente" />
                  <ComboBox fx:id="clientList" prefWidth="150.0" />
               </children>
            </HBox>
            <Button fx:id="resetFiltri" mnemonicParsing="false" onAction="#resetFilters" text="Pulisci tutti i filtri" />
         </children>
      </VBox>
   </children>
</AnchorPane>
