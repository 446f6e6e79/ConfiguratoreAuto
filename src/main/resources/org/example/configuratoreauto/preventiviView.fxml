<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="preventiviComponent" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.configuratoreauto.Controllers.PreventiviController">
   <left>
      <VBox prefHeight="240.0" prefWidth="286.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statoLabel" text="Filtri:">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font></Label>
            <VBox prefHeight="326.0" prefWidth="290.0" styleClass="borderTopBottom">
               <children>
                  <ComboBox fx:id="choiceStato" prefWidth="150.0" />
                  <Label text="Filtra per marca" />
                  <ComboBox fx:id="choiceMarca" prefWidth="150.0" />
                  <Label fx:id="clienteLabel" text="Filtra per cliente" />
                  <TextField fx:id="clienteField" promptText="Nome / Cognome">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label fx:id="sedeLabel" text="Filtra per sede" />
                  <Label fx:id="impiegatoStatoLabel" text="Seleziona Stato" />
                  <ChoiceBox fx:id="stateChoiceBox" prefWidth="150.0" />
                  <ComboBox fx:id="choiceSede" prefWidth="150.0" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#resetFilter" text="Reset Filtri">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>

         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
   </left>

   <top>
      <HBox alignment="CENTER" prefHeight="32.0" BorderPane.alignment="CENTER">
         <Label fx:id="titleMain" alignment="CENTER" prefHeight="32.0" prefWidth="755.0" text="Gestione Preventivi">
            <font>
               <Font name="System Bold" size="26.0" />
            </font></Label>
      </HBox>
   </top>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="mainView" prefHeight="767.0" prefWidth="1090.0" styleClass="scrollPaneBorder" />
         </content>
      </ScrollPane>
   </center>

</BorderPane>
